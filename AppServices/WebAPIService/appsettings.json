{
  "Serilog": {
    "Using": [ "Serilog.Filters.Expressions" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss.fff zzz} [{ThreadId}] [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/API-.txt",
          "outputTemplate": "===> {Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 31,
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "MinimumLevel": "Error",
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/API.Error-.txt",
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] ({SourceContext}) {Message}{NewLine}{Exception}",
                  "retainedFileCountLimit": 31,
                  "rollingInterval": "Day",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true
                }
              }
            ]
          }
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "MinimumLevel": "Debug",
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/API.HTTP-.txt",
                  "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] ({SourceContext}) {Message}{NewLine}{Exception}",
                  "retainedFileCountLimit": 31,
                  "rollingInterval": "Day",
                  "fileSizeLimitBytes": 104857600,
                  "rollOnFileSizeLimit": true
                }
              }
            ],
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "EndsWith(SourceContext, 'RequestResponseLoggingMiddleware')"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.EntityFrameworkCore":"Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server={0};Port={1};Database=phrygia_webapi;User Id={2};Password={3};Application Name=Phrygia.WebAPI;Command Timeout=60;"    
  },
  "ApplicationOptions": {
    "IdentityServiceURI": "http://{0}:{1}/",
    "RabbitMQSeriveURI":"amqp://{0}:{1}@{2}:{3}"
  },
  "AllowedHosts": "*"
}
