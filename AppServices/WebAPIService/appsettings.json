{
  "Serilog": {
    "Using": [ "Serilog.Filters.Expressions", "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "===> {Timestamp:HH:mm:ss.fff zzz} [{ThreadId}] [{Level}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/API-.txt",
          "outputTemplate": "===> {Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 31,
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Properties": {
        "Application": "WebAPILight"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server={0};Port={1};Database=phrygia_webapi;User Id={2};Password={3};Application Name=Phrygia.WebAPI;Command Timeout=60;"    
  },
  "ApplicationOptions": {
    "IdentityServiceURI": "http://{0}:{1}/",
    "RabbitMQSeriveURI":"amqp://{0}:{1}@{2}:{3}"
  },
  "AllowedHosts": "*"
}
